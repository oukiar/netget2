#:kivy 1.8

#:import ImageButton devslib.utils
#:import ScrollBox devslib.scrollbox

#:include editor.kv



<Number@BoxLayout>:
    write_tab: False
    number:number
    Button:
        text: '<'
        on_press: root.number.text = str(int(root.number.text)-1)
    TextInput:
        id: number
        text:'0'
    Button:
        text: '>'
        on_press: root.number.text = str(int(root.number.text)+1)

<Editable>:
    img_target:img_target
    editing: False
    
    Image:
        id: img_target
        source: "target.png"
        center: root.center

