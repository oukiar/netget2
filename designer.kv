#:kivy 1.8

#:import ImageButton devslib.utils
#:import ScrollBox devslib.scrollbox

#:include editor.kv



<Number@BoxLayout>:
    write_tab: False
    number:number
    Button:
        text: '<'
        on_press: root.number.text = str(int(root.number.text)-1)
    TextInput:
        id: number
        text:'0'
    Button:
        text: '>'
        on_press: root.number.text = str(int(root.number.text)+1)

<Editable>:
    img_target:img_target
    editing: False
    
    Image:
        id: img_target
        source: "target.png"
        center: root.center

<Designer>:
    orientation: "vertical"
    code:code
    TabbedPanel:
        do_default_tab: False
        TabbedPanelItem:
            text: 'Widgets'
            
            BoxLayout:
    
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (None, None)
                    size: (100,400)
                    Button:
                        text: "BoxLayout"
                        on_press: root.do_boxlayout()
                    Button:
                        text: "Label"
                        on_press: root.do_label()
                    Button:
                        text: "Button"
                        on_press: root.do_button()
                    Button:
                        text: "Edit"
                        on_press: root.do_edit()
                    Button:
                        text: "Select"
                        on_press: root.do_select()
                    Button:
                        text: "Tab"
                        on_press: root.do_tab()
                    Button:
                        text: "TabItem"
                        on_press: root.do_tabitem()
                    Button:
                        text: "Image"
                        on_press: root.do_image()
                    Button:
                        text: "Video"
                        on_press: root.do_video()
                    Button:
                        text: "Camera"
                        on_press: root.do_camera()
    
                        
                TabbedPanel:
                    do_default_tab: False
                    tab_pos: 'right_top'
                    TabbedPanelItem:
                        text: 'Code'
                        
                        Editor:
                            id:code
                            filename: 'helloworld.kv'
                        
                    TabbedPanelItem:
                        text: 'View'
                        
                        BoxLayout:
                            padding: 20
                            AnchorLayout:
                                anchor_y: "top"
                                Text:
                                    text: "Put here your user interface"
                                    size_hint_y: None
                            BoxLayout:
                                orientation: 'vertical'
                                size_hint_x: None
                                width: 200
                                TabbedPanel:
                                    TabbedPanelItem:
                                        text: 'Properties'
                                    
                                        ScrollBox:
                                            Label:
                                                text: "List of propeties here"
                                                
                                    TabbedPanelItem:
                                        text: 'Events'
                                    
                                        ScrollBox:
                                            Label:
                                                text: "List of events here"
            
        TabbedPanelItem:
            text: "Cloud"
            
        TabbedPanelItem:
            text: "Deploy"
            
        TabbedPanelItem:
            text: "Configuration"
            
        TabbedPanelItem:
            text: "Github"
                
        TabbedPanelItem:
            text: "Data"
            
        TabbedPanelItem:
            text: "Logs"
                
