#:kivy 1.8

#:import ImageButton devslib.utils
#:include editor.kv

<Edit@TextInput>:
    write_tab: False


<Number@BoxLayout>:
    write_tab: False
    number:number
    Button:
        text: '<'
        on_press: root.number.text = str(int(root.number.text)-1)
    TextInput:
        id: number
        text:'0'
    Button:
        text: '>'
        on_press: root.number.text = str(int(root.number.text)+1)

<Designer>:
    orientation: "vertical"
    code:code
    TabbedPanel:
        do_default_tab: False
        TabbedPanelItem:
            text: 'Widgets'
            
            BoxLayout:
    
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (None, None)
                    size: (100,400)
                    width: 100
                    Button:
                        text: "BoxLayout"
                        on_press: root.do_boxlayout()
                    Button:
                        text: "Label"
                        on_press: root.do_label()
                    Button:
                        text: "Button"
                        on_press: root.do_button()
                    Button:
                        text: "Edit"
                        on_press: root.do_edit()
                    Button:
                        text: "Select"
                        on_press: root.do_select()
                    Button:
                        text: "Tab"
                        on_press: root.do_tab()
                    Button:
                        text: "TabItem"
                        on_press: root.do_tabitem()
    
                        
                TabbedPanel:
                    do_default_tab: False
                    tab_pos: 'right_top'
                    TabbedPanelItem:
                        text: 'Code'
                        
                        Editor:
                            id:code
                            filename: 'helloworld.kv'
                        
                    TabbedPanelItem:
                        text: 'View'
            
        TabbedPanelItem:
            text: "Cloud"
            
        TabbedPanelItem:
