<NetgetLogin>:
    anchor_x: "center"
    anchor_y: "center"
    
    txt_user: txt_user
    txt_pass: txt_pass
    
    BoxLayout:
        size_hint: (None,None)
        size: (400,400)
        orientation: "vertical"
        spacing: 10
        Label:
            text: 'Tour    |    [ref=signup]Sign up[/ref]    |    Contact'
            markup: True
            on_ref_press: app.root.show_signup()
        Label:
            text: 'Netget'
            font_size: 36
        TextInput:
            id: txt_user
            text: 'dexter_os86@hotmail.com'
            size_hint_y: None
            height: 40
        TextInput:
            id: txt_pass
            text: 'dexware86'
            size_hint_y: None
            height: 40
            password: True
            multiline: False
        Button:
            text: "Login"
            on_press: app.root.do_login()
        BoxLayout:
            CheckBox:
                size_hint_x: None
                width: 30
            Label:
                text: "Remmember me"
                
<NetgetSignUp>:
    anchor_x: "center"
    anchor_y: "center"
    size_hint: (None,None)
    size: (400,400)
    title: "New account"

    txt_user:txt_user
    txt_pass:txt_pass
    txt_rpass:txt_rpass

    BoxLayout:
        orientation: "vertical"
        spacing: 10
        
        Label:
            text: 'Netget signup'
            font_size: 36
        TextInput:
            id: txt_user
            text: 'Email'
            size_hint_y: None
            height: 40
        TextInput:
            id: txt_pass
            text: 'password'
            size_hint_y: None
            height: 40
            password: True
            multiline: False
        TextInput:
            id: txt_rpass
            text: 'password'
            size_hint_y: None
            height: 40
            password: True
            multiline: False
        Button:
            text: "Create account"
            on_press: app.root.do_signup()

