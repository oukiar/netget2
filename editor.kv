#:kivy 1.8

TextCode:

<Editor>:
    orientation: "vertical"
    on_filename: self.openfile()
    codeinput:codeinput
	TabbedPanel:
        ScrollView:
            CodeInput:
                id: codeinput
                text: ""
                size_hint: 1, None
                height: max( (len(self._lines)+1) * self.line_height, self.parent.height)

    BoxLayout:
        size_hint_y: None
        height: 100
        Button:
            text: "Save"
            on_press: root.on_save()
        Button:
            text: "Run"
            on_press: root.on_run()
        Button:
            text: "Open"
            on_press: root.on_open()
        Button:
            text: "Close"
            on_press: root.on_close()
        Button:
            text: "New"
            on_press: root.on_new()