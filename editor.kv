#:kivy 1.8

TextCode:

<Editor>:
    orientation: "vertical"
    codeinput:codeinput
    ntabs:ntabs
    ScrollView:
        CodeInput:
            id: codeinput
            text: ""
            size_hint: 1, None
            height: max( (len(self._lines)+1) * self.line_height, self.parent.height)

    BoxLayout:
        size_hint_y: None
        height: 100
        Button:
            text: "Delete"
            on_press: root.on_delete()
        Button:
            text: "Tab insert"
            on_press: root.on_tab()
        Number:
            id: ntabs
        Button:
            text: "Open"
            on_press: root.on_open()
        Button:
            text: "Run"
            on_press: root.on_run()
        Button:
            text: "Save"
            on_press: root.on_save()
